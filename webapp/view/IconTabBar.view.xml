                                    <TextArea id="test214" value="test22"></TextArea>
                                    <TextArea id="test215" value="test23"></TextArea>
                                    <TextArea id="test216" value="test24"></TextArea>
                                </ScrollContainer>
                            </f:midColumnPages>
                            
                        </f:FlexibleColumnLayout>
                    </IconTabFilter>
                    <IconTabFilter id="attachments" icon="sap-icon://attachment" key="attachments" count="3"></IconTabFilter>
                    <IconTabFilter id="notes" icon="sap-icon://notes" key="notes" count="12"></IconTabFilter>
                    <IconTabFilter id="people" icon="sap-icon://group" key="people"></IconTabFilter>
                    <IconTabFilter id="text" text="text"></IconTabFilter>
                </items>
            </IconTabBar>
    </Page>
